script/source = "extends Label

var pause = false

func _ready():
	self.text = tr(\"PAUSE_LABEL\")
	hide()

func _physics_process(delta):
	var pausekey = Input.is_action_just_pressed(\"Pause\")
	
	if pausekey:
		if pause:
			hide()
			get_tree().set_pause(false)
			pause = false
		else:
			show()
			get_tree().set_pause(true)
			pause = true"

