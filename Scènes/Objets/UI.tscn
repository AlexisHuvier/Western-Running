var timer = 0

func _process(delta):
	if global.playerBall == 1:
		self.text = tr(\"RELOAD_LABEL\")
	elif global.playerBall == 0:
		if timer < 0:
			timer = 20
			if self.text == \"\":
				self.text = tr(\"RELOAD_LABEL\")
			else:
				self.text = \"\"
	else:
		self.text = \"\"
	timer -= 1
"

